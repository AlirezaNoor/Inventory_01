@model InventoryApplicationContract.BrandApplicationContract.EditedBrand
<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Brand ADD</h4>
                <h6>Create new Brand</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <form asp-action="Edited" enctype="multipart/form-data">
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>اسم برند</label>
                            <input type="text" asp-for="name">
                            <input type="hidden" asp-for="Id">

                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>توضیح</label>
                            <textarea class="form-control" asp-for="descrption"></textarea>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label> عکس برند</label>
                            <div class="image-upload">
                                <input type="file" asp-for="imgge">
                                <div class="image-uploads">
                                    <img src="~/assets/img/icons/upload.svg" alt="img">
                                    <h4>Drag and drop a file to upload</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <input type="submit" class="btn btn-submit me-2" placeholder="submit">
                        <a href="brandlist.html" class="btn btn-cancel">Cancel</a>
                    </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>