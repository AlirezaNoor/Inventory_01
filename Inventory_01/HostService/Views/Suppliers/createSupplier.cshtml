@model InventoryApplicationContract.Supplier.CreateSupplier
<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Supplier Management</h4>
                <h6>Add/Update Customer</h6>
            </div>
        </div>

        <form method="post" >
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>نام تانین کننده </label>
                                <input type="text" asp-for="SupplierName">
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>ایمیل</label>
                                <input type="text" asp-for="Email">
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>تلفن</label>
                                <input type="text" asp-for="phone">
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>کشور</label>
                                <select asp-for="counteryref" asp-items="@Model.couneries">
                                    <option>Choose Country</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>شهر</label>
                                <select class=" " asp-for="Cityref" asp-items="@Model.cities">
                                    <option>Choose City</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-9 col-12">
                            <div class="form-group">
                                <label>ادرس شکر</label>
                                <input type="text" asp-for="Addresss">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>توضیحات</label>
                                <textarea class="form-control" asp-for="Description"></textarea>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <input type="submit" class="btn btn-submit me-2" placeholder="submit">
                            <a href="javascript:void(0);" class="btn btn-cancel">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>